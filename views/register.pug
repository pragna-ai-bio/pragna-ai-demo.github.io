doctype html
html
  head
    title Register
    link(rel="stylesheet" href="/css/style.css")

  body
    .form-box
      h1 Register

      if error
        p.error-message(style="text-align:center") #{error}

      form(action="/auth/register" method="POST")

        // NAME
        label Name
        input(
          type="text"
          name="name"
          required
          class=(fieldErrors && fieldErrors.name ? "input-error" : "")
          value=(formData && formData.name ? formData.name : "")
        )
        if fieldErrors && fieldErrors.name
          p.error-message= fieldErrors.name

        // EMAIL
        label Email
        input(
          type="email"
          name="email"
          required
          class=(fieldErrors && fieldErrors.email ? "input-error" : "")
          value=(formData && formData.email ? formData.email : "")
        )
        if fieldErrors && fieldErrors.email
          p.error-message= fieldErrors.email

        // PASSWORD
        label Password
        input(
          type="password"
          name="password"
          required
          class=(fieldErrors && fieldErrors.password ? "input-error" : "")
        )
        if fieldErrors && fieldErrors.password
          p.error-message= fieldErrors.password

        button(type="submit") Register

      p
        | Already have an account?
        a(href="/auth/login") Login
